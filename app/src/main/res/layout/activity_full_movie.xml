                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:text="revenueS"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

